<% content_for(:headjs) do %>
	<% javascript_include_tag 'bootstrap-fileupload.min' %>
<% end %>

<% content_for(:headcss) do %>
	<% stylesheet_link_tag 'bootstrap-fileupload.min' %>
<% end %>

<div class="span5 well" style="margin:70px auto; float:none; ">
	<h3 style="text-align:center; color:black;">File Upload</h3> <hr/>
	<%= form_tag ({:action =>  :uploadFile}, :multipart => true) do%>
		<div class="fileupload fileupload-new" data-provides="fileupload" >
		  <div class="input-append">
		    <div class="uneditable-input span3">
		    	<i class="icon-file fileupload-exists"></i> 
		    	<span class="fileupload-preview"></span>
		    </div>
		    <span class="btn btn-file"><span class="fileupload-new">Select file</span>
		    <span class="fileupload-exists">Change</span>
		    	<%= file_field_tag 'upload' %>
		    </span>
		    <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
		  </div>
		</div>

		<div class="row" id="file_privacy">
			<div class="span2" style="margin: 3px 15px;">
		        <div class="btn-group pull-right" data-toggle="buttons-radio">
		            <a class="btn active" val="public">Public</a>
		            <a class="btn" val="private">Private</a>
		        </div>
		    </div>
		</div>
		<input type="hidden" name="privacy" value="public" />
	    <hr />
		<%= submit_tag "Upload", :class => 'btn btn-primary pull-right' %>
		<br/>
	<% end %>
</div>

<script type="text/javascript">
	currentNav = "upload";
	$(function(){
		$('#file_privacy').delegate('a','click',function(){
			$('[name=privacy]').val( $('#file_privacy a.active').attr("val")=="public"? "private" : "public" );
		});
	});
</script>

