<!-- SignUp form-->
<div id="signUpForm" class="modal <%= 'hide fade' if showSignUp!=true %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="<%= 'top:20%;' if showSignUp==true %>">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">
    	<% if defined? @edit %>
    		Edit User
    	<% else %>
    		Sign Up
    	<% end %>
    </h3>
  </div>
  <% if !defined? @edit %>
  	<% action = :create %>
  <% else %>
  	<% action = :update %>
  <% end %>

  <% form_for(:user, :url => {:controller => :users ,:action => action}) do |f| %>
  	<div class="modal-body">

	    <div class="span3">
	       
	        <label>First Name</label>
	        <%= f.text_field :name, :class => 'span3' %>

	        <label>Email Address <i>[Username]</i></label>
	         <%= f.email_field :email, :class => 'span3' %>
	        <label>Password</label>
	         <%= f.password_field :password, :class => 'span3' %>
	        
	        <div class="clearfix"></div>
	       
	    </div>

	  </div>
	  <div class="modal-footer">
	  	<% if !defined? @edit %>
	    	<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	    <% end %>
	    <input type="submit" class="btn btn-primary" value="<% if !defined? @edit %> Sign me up!<% else %> Save <% end %>" />
	  </div>
   <% end %>
</div>


<script type="text/javascript">
    currentNav = "users";
</script>