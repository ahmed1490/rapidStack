

<div class="well" style="width:850px; margin: 100px 350px;">
	<h4>Your Files</h4> <hr />
    <table class="table" >
      <thead>
        <tr>
          	<th>#</th>
         	<th>Filename</th>
			<th>FilePath</th>
			<th>Public?</th>
			<th>Action</th>
        </tr>
      </thead>
      <tbody>

      <% @files.each do |file| %>
			<tr>
				<td><%= file.id%></td>
				<td><%= if file.filename.class == String 
                  file.filename 
                else
                  File.basename(file.filename.url)
                end%></td>
				<td><%= file.filename.url%></td>
				<td><%= file.public ? "Yes" : "No" %></td>
      			<td>
	              <%= link_to file.filename.url do %>
                  <i class=" icon-download"></i>
                <% end %>

                <% link_to rapid_file_path(file.id), :confirm => "Are you sure?", :method => :delete do %>
	                 <i class="icon-remove"></i>
                <% end %>
                <!--a href="#deleteConfirm" role="button" data-toggle="modal"></a-->
	          </td>
			</tr>
		<% end %>

      </tbody>
    </table>
</div>


<div class="modal small hide fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="deleteConfirmLabel">Delete Confirmation</h3>
    </div>
    <div class="modal-body">
        <p class="error-text">Are you sure you want to delete the File?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-danger" data-dismiss="modal">Delete</button>
    </div>
</div>

